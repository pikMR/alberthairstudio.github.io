---
import Logo from "../assets/cropped-logo-4.png";
import { Image } from "astro:assets";
import { URL_REQUEST_BOOKING } from "astro:env/client";
---

<header>
  <nav class="container">
    <div class="nav-logo">
      <Image src={Logo} alt="logo de la marca" loading="eager" width={169} />
    </div>
    <div class="nav-links">
      <a href="#customers">Rese√±as</a>
      <a href="#footer">Redes</a>
      <a href={URL_REQUEST_BOOKING} target="_blank">
        <span>Pedir Cita</span>
        <span class="pulse tag">App</span>
      </a>
    </div>
  </nav>
</header>

<style lang="scss">
  .nav-logo img {
    width: 150px !important;
  }
  nav {
    position: relative;
    display: grid;
    grid-template-columns: 30% 55% 30%;
    top: 20px;
    align-items: center;
    .nav-cta {
      text-align: right;
    }
    .nav-links {
      margin-top: -2px;
    }
    a:not(.button) {
      padding: 0 10px;
      color: #333;
      text-decoration: none;
      font-weight: 500;
      img {
        width: 90px;
        margin-left: -6px;
        margin-top: 2px;
      }
    }

    @media (max-width: 900px) {
      grid-template-columns: 50% 50%;
      .nav-logo img {
        margin-top: 7px;
      }
      .nav-links {
        display: inline-block;
      }
    }
  }
  .pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  @keyframes pulse {
    50% {
      opacity: 0.7;
    }
  }

  .tag {
    background-color: var(--tenary);
    color: #fff;
    padding: 5px 10px;
    border-radius: 20px;
    font-size: 1.2rem;
    font-weight: 500;
  }
</style>
